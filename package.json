{
  "title": "Lockbox",
  "name": "lockbox",
  "id": "lockbox@mozilla.com",
  "version": "2.0.0",
  "description": "Take your passwords everywhere.",
  "engines": {
    "firefox": ">= 63"
  },
  "scripts": {
    "autolint": "npm run :autolint:js",
    ":autolint:js": "eslint .",
    "lint": "cross-env STRICT_LINT=1 npm run autolint",
    "prebuild": "npm run autolint && npm run clean:build",
    "build": "webpack",
    "clean:build": "git clean -dfX dist",
    "clean:package": "git clean -dfX addons",
    "clean:coverage": "git clean -dfX coverage",
    "clean": "npm run clean:build && npm run clean:package && npm run clean:coverage",
    "distclean": "git clean -dfX .",
    "prepackage": "npm run build && npm run clean:package",
    "package": "web-ext build --source-dir ./dist --artifacts-dir ./addons",
    "prerun": "npm run build",
    "run": "web-ext run --source-dir ./dist",
    "pretest": "npm run autolint && npm run clean:coverage",
    "test": "cross-env NODE_ENV=test karma start --single-run",
    "preintegration": "npm run build",
    "integration": "cross-env NODE_ENV=test MOZ_HEADLESS=1 mocha --timeout 10000 test/integration"
  },
  "author": "Lockbox Team <lockbox-dev@mozilla.com>",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-async-generators": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-rewire": "^1.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-plugin-mozilla": "^0.16.1",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-react": "^7.11.1",
    "json-templater": "^1.2.0",
    "karma": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "web-ext": "^2.9.1",
    "webextensions-geckodriver": "^0.4.0",
    "webpack": "^4.20.1",
    "webpack-cli": "^3.1.1"
  }
}
